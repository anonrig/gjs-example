body
  font-family "Helvetica Neue", Helvetica
  width 100%
  height 100%
  margin 0
  padding 0
#bg
  background url('../img/bg.jpg')
  background-size cover
  background-position center center
  position absolute
  width 100%
  height 100%
.container
  width 100%
h1
  position absolute
  left 0
  right 0
  margin 0 auto
  top 400px
  font-size 50px
  font-weight 300
  text-align center
  letter-spacing 6.2px
